  @Test
  public void testquest() {
    driver.get("http://blog.csssr.ru/qa-engineer/");
    driver.manage().window().setSize(new Dimension(1936, 1056));
    driver.findElement(By.linkText("НАХОДИТЬ НЕСОВЕРШЕНСТВА")).click();
    assertThat(driver.findElement(By.cssSelector(".info-errors > h1")).getText(), is("Находить баги и несоответствия исходному дизайну в верстке наших проектов. Тестировать их с точки зрения удобства для пользователя. И указывать разработчикам на несовершенства."));
    assertThat(driver.findElement(By.cssSelector(".info-errors > article:nth-child(2)")).getText(), is("ДЛЯ ЧЕГО ЭТО НУЖНО?\nВ CSSSR внедрен высокий станадрт качества. Если мы верстаем сайт, это значит, что он будет одинаково хорошо отображаться во всех заявленных браузерах, на нем будут самые красивые эффекты, а поведение всех элементов страниц будет предсказуемым и приятным для пользователя."));
    assertThat(driver.findElement(By.cssSelector(".info-errors > article:nth-child(3)")).getText(), is("КАК ЭТО ДЕЛАЕТСЯ?\nКачество наших сайтов — это внимание к мелочам и деталям. Ассистенты менеджера последовательно отсматривают все проекты и указывают разработчикам на ошибки, расхождения с макетами и возможные улучшения. Так происходит до тех пор, пока шаблоны сайта не станут идеальными."));
    assertThat(driver.findElement(By.cssSelector(".info-errors h3")).getText(), is("ПОТРЕБУЕТСЯ"));
    assertThat(driver.findElement(By.cssSelector(".info-errors li:nth-child(1) > label")).getText(), is("Идеальный глазомер"));
    assertThat(driver.findElement(By.cssSelector(".info-errors li:nth-child(2) > label")).getText(), is("Чувство прекрасного"));
    assertThat(driver.findElement(By.cssSelector(".info-errors li:nth-child(3) > label")).getText(), is("Умение четко формулировать задачи"));
    assertThat(driver.findElement(By.linkText("Софт для быстрого создания скриншотов")).getText(), is("Софт для быстрого создания скриншотов"));
    driver.findElement(By.linkText("НАХОДИТЬ НЕСОВЕРШЕНСТВА")).click();
    assertThat(driver.findElement(By.cssSelector(".info-errors > h1")).getText(), is("Находить баги и несоответствия исходному дизайну в верстке наших проектов. Тестировать их с точки зрения удобства для пользователя. И указывать разработчикам на несовершенства."));
    assertThat(driver.findElement(By.cssSelector(".info-errors > article:nth-child(2)")).getText(), is("ДЛЯ ЧЕГО ЭТО НУЖНО?\nВ CSSSR внедрен высокий станадрт качества. Если мы верстаем сайт, это значит, что он будет одинаково хорошо отображаться во всех заявленных браузерах, на нем будут самые красивые эффекты, а поведение всех элементов страниц будет предсказуемым и приятным для пользователя."));
    assertThat(driver.findElement(By.cssSelector(".info-errors > article:nth-child(3)")).getText(), is("КАК ЭТО ДЕЛАЕТСЯ?\nКачество наших сайтов — это внимание к мелочам и деталям. Ассистенты менеджера последовательно отсматривают все проекты и указывают разработчикам на ошибки, расхождения с макетами и возможные улучшения. Так происходит до тех пор, пока шаблоны сайта не станут идеальными."));
    assertThat(driver.findElement(By.cssSelector(".info-errors h3")).getText(), is("ПОТРЕБУЕТСЯ"));
    assertThat(driver.findElement(By.cssSelector(".info-errors li:nth-child(2) > label")).getText(), is("Чувство прекрасного"));
